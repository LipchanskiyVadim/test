{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve"
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "API/api.js",
        "pages/index.tsx",
        "Redux/posts-reducer.js",
        "pages/_app.tsx",
        "pages/_document.js",
        "Redux/reducer.ts",
        "pages/post/new.tsx",
        "Redux/store.js"
    ],
    "exclude": ["node_modules"]
}
